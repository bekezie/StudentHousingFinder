<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Housing</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <h1 class="navbar-brand">Student Housing Finder</h1>
          <p>Hello, <%= username %></p>
          <form action="/logout" method="GET" class="d-flex">
            <button type="submit" class="btn btn-primary">Log Out</button>
          </form>
        </div>
      </nav>
      <main class="row">
        <div class="col">
          <ul>
            <% msgs.forEach(function (m) { %>
            <div class="card text-white bg-dark mb-3" style="width: 18rem">
              <% if(m.sender == username) { %>
              <div class="card-header">
                <%= m.sender %>(You) said to <%= m.receiver %>:
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item text-center"><%= m.message %></li>
                <li class="list-group-item text-end">at <%= m.time %></li>
              </ul>
              <form
                class="text-center card-footer"
                action="/message/delete"
                method="POST"
              >
                <input
                  type="hidden"
                  name="message"
                  id="message"
                  value="<%= m.messageID %>"
                />
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
              <% } else { %>
              <div class="card-header">
                <%= m.sender %> said to <%= m.receiver %>(You):
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item text-center"><%= m.message %></li>
                <li class="list-group-item text-end">at <%= m.time %></li>
              </ul>
              <form
                class="text-center card-footer"
                action="/message/reply"
                method="POST"
              >
                <label class="form-label"
                  >Message the owner:
                  <textarea
                    class="form-control"
                    id="message"
                    name="message"
                    rows="4"
                    placeholder="Hi, I am interested in this unit."
                  ></textarea>
                </label>
                <input
                  type="hidden"
                  name="receiver"
                  id="receiver"
                  value="<%= m.sender %>"
                />
                <input
                  class="form-control"
                  id="sender"
                  name="sender"
                  type="hidden"
                  value="<%= m.receiver %>"
                />
                <input
                  class="form-control"
                  id="time"
                  name="time"
                  type="hidden"
                  value="<%= time %>"
                />
                <button type="submit" class="btn btn-primary">Reply</button>
              </form>
              <% } %>
            </div>
            <br />
            <% })%>
          </ul>
        </div>
        <!-- ./col-8 -->
        <div class="col-4">
          <div>
            <a class="btn btn-success" href="/" role="button">Back to Home Page</a>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
