<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Housing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Student Housing</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
            </ul>
            <form action="/auth/loginUser" method="POST" class="d-flex">
                <input type="text" class="form-control me-2" name="username" id="username" placeholder="username">
                <input input type="password" class="form-control me-2" name="password" id="password" placeholder="password">
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
        </div>
    </nav>
    <div class="container">
        <h1>Student Housing</h1>
        <div> <%=user%></div>
        <div class="col-8">
            <h2>Listings</h2>
            <ul>
                <% listings.forEach(function (l) { %>
                <li>
                    <%= l.location %>
                    <%= l.openingDate %>
                    <%= l.size %>
                    <%= l.unitType %>
                    <%= l.offer %>
                    <%= l.description %>
                    <%= l.leaseInMonths%>
                    <%= l.available%>
                </li>
                <% })%>
            </ul>
        </div>
    </div>
    </div>
    </div>
    </div>
</body>

</html>