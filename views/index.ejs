<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Housing</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Student Housing</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
            </ul>
            <form action="/auth/loginUser" method="POST" class="d-flex">
              <input
                type="text"
                class="form-control me-2"
                name="username"
                id="username"
                placeholder="Username"
              />
              <input
                input
                type="password"
                class="form-control me-2"
                name="password"
                id="password"
                placeholder="Password"
              />
              <button type="submit" class="btn btn-primary">Login</button>
            </form>
          </div>
        </div>
      </nav>
      <main class="row">
        <div class="col-8">
          <!-- List housing summaries with links to further details -->
          <h2>Listings</h2>
          <ul>
            <% listings.forEach(function (l) { %>
            <a
              href="/listings/<%= l.listingID %>"
              class="
                list-group-item list-group-item-action
                d-flex
                w-100
                justify-content-between
              "
            >
              <div>
                <h2><%= l.location %></h2>
                <br />
                <%= l.description %>
              </div>
              <form action="/listings/delete" method="POST">
                <input
                  type="hidden"
                  name="listingID"
                  value="<%= l.listingID %>"
                />
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </a>
            <br />
            <% })%>
          </ul>
        </div>
        <!-- /.col-8 -->

        <div class="col-4">
          <!-- Create Listing side bar (right 4 cols) -->
          <h2>Create Listing</h2>
          <form action="/listings/create" method="POST">
            <div>
              <label class="form-label"
                >Location:
                <input
                  class="form-control"
                  name="location"
                  type="text"
                  required
                />
              </label>
            </div>
            <div>
              <label class="form-label"
                >Opening Date:
                <input
                  class="form-control"
                  name="openingDate"
                  type="text"
                  placeholder="MM/DD/YYYY"
                />
              </label>
            </div>
            <div>
              <label class="form-label"
                >Size (Sqft):
                <input
                  class="form-control"
                  name="size"
                  type="number"
                  placeholder="550"
                  required
                />
              </label>
            </div>
            <div>
              <label for="unitType" class="form-label"
                >Choose a unit type:
                <select class="form-select" id="unitType" name="unitType">
                  <option value="dorm">Dorm</option>
                  <option value="apartment">Apartment</option>
                </select>
              </label>
            </div>
            <div>
              <label class="form-label"
                >Offer (Per month):
                <input
                  class="form-control"
                  name="offer"
                  type="number"
                  placeholder="600"
                />
              </label>
            </div>
            <div>
              <label class="form-label"
                >Description:
                <textarea
                  class="form-control"
                  id="description"
                  name="description"
                  rows="4"
                  placeholder="Please provide a short description of the unit."
                ></textarea>
              </label>
            </div>
            <div>
              <label class="form-label"
                >Lease Term (Months):
                <input
                  class="form-control"
                  name="leaseInMonths"
                  type="number"
                  value="6"
                />
              </label>
            </div>
            <div>
              <label for="available" class="form-label"
                >Available:
                <select class="form-select" id="available" name="available">
                  <option value="TRUE">Yes</option>
                  <option value="FALSE">No</option>
                </select>
              </label>
            </div>
            <div>
              <label class="form-label">
                <input
                  class="form-control"
                  name="authorID"
                  type="hidden"
                  required
                />
              </label>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
          </form>
        </div>
        <!-- /.col-4 -->
      </main>
    </div>
    <script language="JavaScript">
      function processUser() {
        var parameters = location.search.substring(1).split("&");

        var temp = parameters[0].split("=");
        username = unescape(temp[1]);
        temp = parameters[1].split("=");
        password = unescape(temp[1]);
        document.getElementById("username").innerHTML = username;
        document.getElementById("password").innerHTML = password;
      }
      processUser();
    </script>
  </body>
</html>
