<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Housing</title>
    <!-- bootstrap formatting -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <!-- Navigation Bar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Student Housing</a>
        </div>
      </nav>
      <!-- End navigation bar -->

      <main class="row">
        <div class="col-8">
          <h1 class="display-1"><%= listing.location %></h1>
          <div>
            <h2><%= listing.location %></h2>
            <br />
            Opening Date: <%= listing.openingDate %>
            <br>
            Size: <%= listing.size %>
            <br>
            Unit Type: <%= listing.unitType %>
            <br>
            Offer: <%= listing.offer %>
            <br>
            Description: <%= listing.description %>
            <br>
            Available: 
            <script type="text/javascript">
              if (<%= listing.available %> == "TRUE") {
                document.write("Yes")
              } else {
                document.write("No")
              }
            </script>
            <% if (rating.rating != undefined) { %>
            
                            <h3> My Rating:</h3>
                                <%= rating.rating %>
                                
                                <div>Update Rating</div>
                                <form action="/updateRating" method="POST">
                                    <label for="rating">1</label>
                                    <input type="checkbox" id="rating" name="rating" value="1">
                                    <label for="rating">2</label>
                                    <input type="checkbox" id="rating" name="rating" value="2">
                                    <label for="rating">3</label>
                                    <input type="checkbox" id="rating" name="rating" value="3">
                                    <label for="rating">4</label>
                                    <input type="checkbox" id="rating" name="rating" value="4">
                                    <label for="rating">5</label>
                                    <input type="checkbox" id="rating" name="rating" value="5">
                                    <input type="hidden" name="listingID" value="<%= listing.listingID %>" />
                                    
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            
                            
                            <%} else { %>
                            <h3> No Rating </h3>
                               <div>Rate Listing</div>
                                <form action="/createRating" method="POST">
                                    <label for="rating">1</label>
                                    <input type="checkbox" id="rating" name="rating" value="1">
                                    <label for="rating">2</label>
                                    <input type="checkbox" id="rating" name="rating" value="2">
                                    <label for="rating">3</label>
                                    <input type="checkbox" id="rating" name="rating" value="3">
                                    <label for="rating">4</label>
                                    <input type="checkbox" id="rating" name="rating" value="4">
                                    <label for="rating">5</label>
                                    <input type="checkbox" id="rating" name="rating" value="5">
                                    <input type="hidden" name="listingID" value="<%= listing.listingID %>" />
                                    
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            
                            <% } %>
                            
          </div>
        </div>
        <!-- /.col-8 -->

        <div class="col-4">
          <form action="/message/send" method="POST">
            <div>
              <label class="form-label"
                >Message the owner:
                <textarea
                  class="form-control"
                  id="message"
                  name="message"
                  rows="4"
                  placeholder="Hi, I am interested in this unit."
                ></textarea>
              </label>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
      </main>
    </div>
  </body>
</html>
