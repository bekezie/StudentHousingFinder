<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Housing</title>
    <!-- bootstrap formatting -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <!-- Navigation Bar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Student Housing</a>
          <!-- Use to potentially implement user sign in -->
          <!--           <script type="text/javascript">
            if(document.getElementById("username")!="") {
              document.write("<span id='username'></span>")
            } else {
              document.write("<a class='btn btn-primary' href='/register' role='button'>Sign Up/Sign In</a>")
            }
          </script> -->
        </div>
      </nav>
      <!-- End navigation bar -->

      <main class="row">
        <div class="col-8">
          <form action="/listings/update" method="POST">
            <div>
              <input
                class="form-control"
                name="location"
                type="hidden"
                value="<%= listing.listingID %>"
              />
            </div>
            <div>
              <label class="form-label"
                >Location:
                <input
                  class="form-control"
                  name="location"
                  type="text"
                  value="<%= listing.location %>"
                  required
                />
              </label>
            </div>
            <div>
              <label class="form-label"
                >Opening Date:
                <input
                  class="form-control"
                  name="openingDate"
                  type="text"
                  placeholder="MM/DD/YYYY"
                  value="<%= listing.openingDate %>"
                />
              </label>
            </div>
            <div>
              <label class="form-label"
                >Size (Sqft):
                <input
                  class="form-control"
                  name="size"
                  type="number"
                  placeholder="250"
                  value="<%= listing.size %>"
                  required
                />
              </label>
            </div>
            <div>
              <label for="unitType" class="form-label"
                >Choose a unit type:
                <select class="form-select" id="unitType" name="unitType">
                  <option value="<%= listing.unitType %>" selected>
                    <%= listing.unitType %>
                  </option>
                  <option value="dorm">Dorm</option>
                  <option value="apartment">Apartment</option>
                </select>
              </label>
            </div>
            <div>
              <label class="form-label"
                >Offer (Per month):
                <input
                  class="form-control"
                  name="offer"
                  type="number"
                  placeholder="1000"
                  value="<%= listing.offer %>"
                />
              </label>
            </div>
            <div>
              <label class="form-label"
                >Description:
                <textarea
                  class="form-control"
                  id="description"
                  name="description"
                  rows="4"
                  placeholder="Please provide a short description of the unit."
                  value="<%= listing.description %>"
                ></textarea>
              </label>
            </div>
            <div>
              <label class="form-label"
                >Lease Term (Months):
                <input
                  class="form-control"
                  name="size"
                  type="number"
                  placeholder="6"
                  value="<%= listing.offer %>"
                />
              </label>
            </div>
            <div>
              <label for="available" class="form-label"
                >Available:
                <select class="form-select" id="available" name="available">
                  <option value="TRUE">Yes</option>
                  <option value="FALSE">No</option>
                </select>
              </label>
            </div>
            <div>
              <label class="form-label">
                <input
                  class="form-control"
                  name="authorID"
                  type="hidden"
                  required
                />
              </label>
            </div>

            <button type="submit" class="btn btn-primary">
              Update Listing
            </button>
          </form>
        </div>
        <!-- /.col-8 -->

        <div class="col-4">
          <form action="/message/send" method="POST">
            <div>
              <label class="form-label"
                >Message the owner:
                <textarea
                  class="form-control"
                  id="message"
                  name="message"
                  rows="4"
                  placeholder="Hi, I am interested in this unit."
                ></textarea>
              </label>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
      </main>
    </div>
    <script language="JavaScript">
      function processUser() {
        var parameters = location.search.substring(1).split("&");

        var temp = parameters[0].split("=");
        username = unescape(temp[1]);
        temp = parameters[1].split("=");
        password = unescape(temp[1]);
        document.getElementById("username").innerHTML = username;
        document.getElementById("password").innerHTML = password;
      }
      processUser();
    </script>
  </body>
</html>
